/**
 * Custom Styles here.
 *
 * refï¼šhttps://v1.vuepress.vuejs.org/config/#index-styl
 */
@import '~bootstrap/dist/css/bootstrap.css';
@import '~bootstrap-vue/dist/bootstrap-vue.css';

.home .hero img
  max-width 450px!important

.navbar {
  background-image: -webkit-linear-gradient(left, #0B556B 0%, #232733 100%) !important;
  background-image: linear-gradient(to right, #0B556B 0%, #232733 100%) !important;
  background-repeat: repeat-x !important;
  box-shadow: 0 2px 1px -1px rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 1px 3px 0 rgba(0,0,0,.12);
}

.navbar .site-name {
  color: white !important;
}

.navbar .links {
  background-color: transparent !important;
}

.nav-link {
  color: white !important;
}

.home .hero h1 {
  font-size: 2em !important;
}

.navbar .site-name {
  font-size: 1rem !important;
  font-weight: 500 !important;
}

.sidebar {
  width: 10em;
}

/* Default styles for Vuepress overidden by bootstrap-vue */
body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif !important;
  font-size: 16px !important;
  color: #2c3e50 !important;
  line-height: 1.2 !important;
}

.navbar {
  position: absolute !important;
  padding: .7rem 1.5rem !important;
}

.nav-links .nav-item {
  margin-left: 1.5rem !important;
}
.nav-links a {
  padding: 0 !important;
}

.nav-links .nav-item:first-child {
  margin-left: 0 !important;
}


h1, h2, h3, h4, h5, h6 {
  font-weight: 600 !important;
  line-height: 1.25 !important;
}

h1 {
  font-size: 2.2rem !important;
}

h2 {
  font-size: 1.65rem !important;
  padding-bottom: 0.3rem !important;
  border-bottom: 1px solid #eaecef !important;
}

h3 {
  font-size: 1.35rem !important;
}

h4, h5, h6 {
  font-size: 16px !important;
}

.page a {
  color: #3eaf7c;
}
.search-box input {
  width: 12rem !important;
}

.theme-default-content {
  max-width: 820px !important;
}

.home .theme-default-content {
  max-width: 960px !important;
}

p {
  margin-top: 1rem !important;
}

.theme-default-content:not(.custom) > h1:first-child + p,
.theme-default-content:not(.custom) > h2:first-child + p,
.theme-default-content:not(.custom) > h3:first-child + p,
.theme-default-content:not(.custom) > h4:first-child + p,
.theme-default-content:not(.custom) > h5:first-child + p,
.theme-default-content:not(.custom) > h6:first-child + p {
  margin-top: 2rem !important;
}
